		public function populateEmailAddress(event:ResultEvent):void {
			trace("in populateEmailAddress()");
			var email:String;
			var resetPassword:Boolean = false;
			var fragObj:Object = new Object();
			if (event != null) {
				email = event.result as String;
			} 
			if (event == null || email == 'not logged in' || email == '') {
				var url:String = bm.url;
				if (url.indexOf("?") > -1) {
					var tmp:Array = url.split("?");
					var tmp2:Array = tmp[tmp.length-1].split("#");
					var fragment:String = tmp2[0];
					fragObj = URLUtil.stringToObject(fragment,"&");
					if (fragObj['change_password'] != null) {
						resetPassword = true;
					}
				}
				
				if (resetPassword && !alreadyResetPassword) {
					var resetPasswordDialog:ResetPasswordDialog;
					resetPasswordDialog = ResetPasswordDialog(PopUpManager.createPopUp(this, ResetPasswordDialog, true));
					PopUpManager.centerPopUp(resetPasswordDialog);
					if (fragObj['email'] != null) {
						resetPasswordDialog.email = fragObj['email'];
					}
					if (fragObj['token'] != null) {
						resetPasswordDialog.token = fragObj['token'];
					}
					resetPasswordDialog.addEventListener(ResetPasswordEvent.RESET_PASSWORD_EVENT, handleResetPasswordEvent);
					resetPasswordDialog.addEventListener(ReloginEvent.RELOGIN_EVENT, handleReloginEvent);
				} else {
					var loginDialog:LoginDialog;
					loginDialog = LoginDialog(PopUpManager.createPopUp(this, LoginDialog, true));
					if (fragObj['email'] != null) {
						loginDialog.email = fragObj['email'];
					}
					if (fragObj['token'] != null) {
						loginDialog.token = fragObj['token'];
					}
					
					loginDialog.addEventListener(GotLoginInfoEvent.GOT_LOGIN_INFO_EVENT, gotEmailAddressFromUser);
					loginDialog.addEventListener(RegistrationEvent.REGISTRATION_EVENT, popupRegistrationDialog);
					loginDialog.title = 'Login';
					PopUpManager.centerPopUp(loginDialog);
				}
			} else if (Util.getQueryStringItem(bm, "initialView") == "importExperiment") {
				trace("We are importing from the pipeline");
				stopProgressBar();
				var sbeamsProjectId:String = Util.getQueryStringItem(bm, "projectId");
				var sbeamsTimestamp:String = Util.getQueryStringItem(bm, "dateDir");
				mainPanel.enabled = true;
				emailAddressTextBox.text = email;
				
				var importExperimentDialog:ImportExperimentDialog = ImportExperimentDialog(PopUpManager.createPopUp(app, ImportExperimentDialog, true));
				PopUpManager.centerPopUp(importExperimentDialog);
				importExperimentDialog.projectId = sbeamsProjectId;
			    importExperimentDialog.dateDir = sbeamsTimestamp;
			    importExperimentDialog.addEventListener(GetConditionsEvent.GET_CONDITIONS_EVENT, function(event:GetConditionsEvent):void {
			    	startProgressBar();
			    	getConditions();
			    });
				importExperimentDialog.checkForPriorImport();
								
				//when done, run getConditions()
			} else {
				mainPanel.enabled = true;
				emailAddressTextBox.text = email;
				//getConditions();
				setCurrentState('groupState');
				populateGroupGrid(null);
			}
