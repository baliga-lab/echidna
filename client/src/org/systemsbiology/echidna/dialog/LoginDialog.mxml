<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="282" height="170" creationComplete="init()"
	showCloseButton="true" close="PopUpManager.removePopUp(this)">
	<mx:Label x="26" y="10" text="Please enter your email address:" width="234"/>
	<mx:TextInput id="emailTxt" x="39" y="45" enter="onOk()"/>
	<mx:Button x="39" y="92" label="OK" id="okButton" click="onOk()"/>
	<mx:Button x="106" y="92" label="Cancel" id="cancelButton" click="PopUpManager.removePopUp(this)"/>
	<mx:Metadata>
		[Event(name="gotLoginInfoEvent", type="org.systemsbiology.echidna.events.GetLoginInfoEvent")]
	</mx:Metadata>
	<mx:Script>
		<![CDATA[
			import org.systemsbiology.echidna.events.GotLoginInfoEvent;
			import mx.managers.PopUpManager;
			
			
			public function init():void {
				emailTxt.setFocus();
			}
			
			public function onOk():void {
				var evt:GotLoginInfoEvent = new GotLoginInfoEvent(GotLoginInfoEvent.GOT_LOGIN_INFO_EVENT);
				evt.email = emailTxt.text;
				dispatchEvent(evt);
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
</mx:TitleWindow>
